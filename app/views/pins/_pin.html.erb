<div id="<%= dom_id pin %>">
  <p>
    <strong>Title:</strong>
    <%= pin.title %>
  </p>

  <%= pin.body %>

  <br/>
  <#% if image.content_type.in?(%w[image/jpeg image/png]) %><#% end %>
  <%= link_to image_tag(pin.image_as_thumbnail), pin.image if pin.image.attached? %>

  <br/>

  <% pin.pictures_as_thumbnails.each do |picture| %>
    <%= link_to image_tag(picture), picture %>
  <% end %>

</div>
